<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawing_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="0dp"
    android:orientation="vertical">

    <xiaoguangmo.keepnote.DrawingView
        android:id="@+id/drawing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <RelativeLayout
        android:id="@+id/eraserView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/pannel"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/btnClear"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_action_discard"
            android:background="#000000"
            />

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/btnClear"
            android:src="@drawable/ic_action_save"
            android:background="#000000"
            />

        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/btnSave"
            android:src="@drawable/ic_action_share"
            android:background="#000000"
            />

        <ImageButton
            android:id="@+id/btnCamera"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/btnShare"
            android:src="@drawable/ic_action_camera"
            android:background="#000000"
            />

        <ImageButton
            android:id="@+id/btnColorPicker"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="1dp"
            android:scaleType="centerInside"
            android:layout_toRightOf="@+id/btnCamera"
            android:src="@drawable/colorpicker"
            android:background="#FFFFFF"
            />

        <ImageButton
            android:id="@+id/btnSizePicker"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="1dp"
            android:scaleType="centerInside"
            android:layout_toRightOf="@+id/btnColorPicker"
            android:src="@drawable/sizepicker"
            android:background="#FFFFFF"
            />

        <ImageView
            android:id="@+id/eraser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/btnSizePicker"
            android:src="@drawable/undo" />

    </RelativeLayout>

</LinearLayout>
    
 